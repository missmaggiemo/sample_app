<%= form_for(@user) do |f|%>

	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :name%>
	<%= f.text_field :name%>

	<%= f.label :email%>
	<%= f.text_field :email%>

	<%= f.label :password%>
	<%= f.text_field :password%>

	<%= f.label :password_confirmation, "Confirmation"%>
	<%= f.text_field :password_confirmation%>

	<%= f.submit message, class: "btn btn-large btn-primary"%>
	<!-- message is passed as a local variable -->

<% end %>