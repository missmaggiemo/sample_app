<% @user ||= current_user %>
<div class="stats">
	<a href="<%= following_user_path(@user)%>">
		<strong id="following" class="stat">
			<%= @user.followed_users.count %>
		</strong>
		following
	</a>
	<a href="<%= followers_user_path(@user)%>">
		<strong id="followers" class="stat">
			<%= @user.followers.count %>
		</strong>
		followers
	</a>
</div>

<!-- id="following" and id="followers" for the benefit of Ajax implemntation, which accesses elements using unique ids -->